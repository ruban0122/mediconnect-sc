pipeline {
    agent any

    environment {
        FLUTTER_VERSION = '3.19.0'
        APK_OUTPUT = 'build/app/outputs/flutter-apk/app-debug.apk'
        FLUTTER_HOME = "${env.WORKSPACE}/flutter"
        PATH = "${env.FLUTTER_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git credentialsId: 'github-cred', url: 'https://github.com/ruban0122/mediconnect-sc.git', branch: 'main'
            }
        }

        stage('Install Flutter SDK') {
            steps {
                bat '''
                    echo "üëâ Cloning Flutter SDK..."
                    git clone https://github.com/flutter/flutter.git -b stable
                    export PATH="$PATH:${WORKSPACE}/flutter/bin"
                    flutter --version
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'flutter pub get'
            }
        }

        stage('Analyze Code') {
            steps {
                bat 'flutter analyze'
            }
        }

        stage('Run Unit Tests') {
            steps {
                bat 'flutter test'
            }
        }

        stage('Build APK') {
            steps {
                bat 'flutter build apk --debug'
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: "${APK_OUTPUT}", fingerprint: true
            }
        }
    }

    post {
        success {
            echo '‚úÖ Flutter build completed successfully!'
        }
        failure {
            echo '‚ùå Flutter build failed.'
        }
    }
}

