pipeline {
    agent any

    environment {
        FLUTTER_HOME = "${env.WORKSPACE}\\flutter"
        PATH = "${env.FLUTTER_HOME}\\bin;${env.PATH}"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git credentialsId: 'github-cred', url: 'https://github.com/ruban0122/mediconnect-sc.git', branch: 'main'
            }
        }

        stage('Install Flutter SDK') {
            steps {
                bat '''
                    echo üëâ Checking for existing Flutter SDK...
                    if not exist "flutter" (
                        echo üëâ Cloning Flutter SDK...
                        git clone https://github.com/flutter/flutter.git -b stable
                    ) else (
                        echo ‚úÖ Flutter SDK already exists, skipping clone.
                    )

                    echo üëâ Adding Flutter to PATH and running flutter doctor...
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter doctor
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                bat '''
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter pub get
                '''
            }
        }

        stage('Analyze Code') {
            steps {
                bat '''
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter analyze
                '''
            }
        }

        stage('Run Unit Tests') {
            steps {
                bat '''
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter test
                '''
            }
        }

        stage('Build APK') {
            steps {
                bat '''
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter build apk --release
                '''
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: 'build\\app\\outputs\\flutter-apk\\app-release.apk', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "‚úÖ Flutter build pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Flutter build failed."
        }
    }
}



