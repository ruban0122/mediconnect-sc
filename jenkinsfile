pipeline {
    agent any

    environment {
        APK_OUTPUT = 'build\\app\\outputs\\flutter-apk\\app-debug.apk'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git credentialsId: 'github-cred', url: 'https://github.com/ruban0122/mediconnect-sc.git', branch: 'main'
            }
        }

        stage('Install Flutter SDK') {
            steps {
                bat '''
                    echo üëâ Cloning Flutter SDK if not already exists...
                    if not exist "flutter" (
                        git clone https://github.com/flutter/flutter.git -b stable
                    )
                    echo üëâ Setting Flutter to PATH
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter --version
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                bat '''
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter pub get
                '''
            }
        }

        stage('Analyze Code') {
            steps {
                bat '''
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter analyze
                '''
            }
        }

        stage('Run Unit Tests') {
            steps {
                bat '''
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter test
                '''
            }
        }

        stage('Build APK') {
            steps {
                bat '''
                    set PATH=%CD%\\flutter\\bin;%PATH%
                    flutter build apk --debug
                '''
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: "${APK_OUTPUT}", fingerprint: true
            }
        }
    }

    post {
        success {
            echo '‚úÖ Flutter build completed successfully!'
        }
        failure {
            echo '‚ùå Flutter build failed.'
        }
    }
}


